{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "[%(created)i] %(levelname)s: %(message)s"
        }
    },

    "handlers": {
        "rotating_file_handler": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "INFO",
            "formatter": "simple",
            "filename": "/tmp/rotating-monitoring.log",
            "maxBytes": 10485760,
            "backupCount": 20,
            "encoding": "utf8"
        },

        "timed_rotating_file_handler": {
            "class": "logging.handlers.TimedRotatingFileHandler",
            "level": "INFO",
            "formatter": "simple",
            "filename": "/tmp/timed-rotating-monitoring.log",
            "when": "midnight",
            "interval": 1,
            "backupCount": 20,
            "encoding": "utf8"
        }

    },

    "loggers": {
        "alignak.module.logs": {
            "level": "ERROR",
            "handlers": ["timed_rotating_file_handler"],
            "propagate": "no"
        }
    },

    "root": {
        "level": "INFO",
        "handlers": ["rotating_file_handler", "timed_rotating_file_handler"]
    }
}